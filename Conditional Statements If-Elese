using System;

namespace ConditionalStatements
{
    class Program
    {
        static void Main(string[] args)
        {
            int number = 10;

            if (number > 0)
            {
                Console.WriteLine("Number is positive.");
            }
            else if (number < 0)
            {
                Console.WriteLine("Number is negative.");
            }
            else
            {
                Console.WriteLine("Number Â  
 is zero.");
            }
        }
    }
}
