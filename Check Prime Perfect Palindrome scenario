using System;

class NumberCheck
{
    // Check if a number is prime
    static bool IsPrime(int number)
    {
        if (number <= 1) return false;
        for (int i = 2; i <= Math.Sqrt(number); i++)
        {
            if (number % i == 0)
                return false;
        }
        return true;
    }

    // Check if a number is perfect
    static bool IsPerfect(int number)
    {
        int sum = 0;
        for (int i = 1; i <= number / 2; i++)
        {
            if (number % i == 0)
                sum += i;
        }
        return sum == number;
    }

    // Check if a number is palindrome
    static bool IsPalindrome(int number)
    {
        int originalNumber = number, reversed = 0, remainder;
        while (number > 0)
        {
            remainder = number % 10;
            reversed = reversed * 10 + remainder;
            number /= 10;
        }
        return originalNumber == reversed;
    }

    // Main method to test the functions
    static void Main(string[] args)
    {
        Console.Write("Enter a number: ");
        int number = int.Parse(Console.ReadLine());

        Console.WriteLine($"Is {number} Prime? {IsPrime(number)}");
        Console.WriteLine($"Is {number} Perfect? {IsPerfect(number)}");
        Console.WriteLine($"Is {number} Palindrome? {IsPalindrome(number)}");
    }
}
